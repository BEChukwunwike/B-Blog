<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scribbles</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
        <h2 class="mt-3">Latest Posts</h2>
        <ul id="posts-list" class="mt-3">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <li>
                        <h3><a class="text-dark" href="/edit-post/<%= post.id %>"><%= post.title %></a></h3>
                        <p class="custom-paragraph"><%= post.content %></p>
                        <p class="custom-paragraph" style="font-weight: bold;"><%= post.author %></p>
                        <button class="delete-button" data-id="<%= post.id %>">Delete</button>
                    </li>
                <% }); %>
            <% } else { %>
                <p>No posts available yet.</p>
            <% } %>
            
        </ul>
    </div>
    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        const deleteButtons = document.querySelectorAll('.delete-button');
        deleteButtons.forEach(button => {
          button.addEventListener('click', () => {
            const postId = button.dataset.id;
      
            if (confirm('Are you sure you want to delete this post?')) {
              fetch(`/delete-post/${postId}`, { method: 'DELETE' })
                .then(response => response.json())
                .then(data => {
                  if (data.success) {
                    button.parentNode.remove(); // Remove the entire post element
                    alert('Post deleted successfully!');
                  } else {
                    alert('Failed to delete post: ' + data.error);
                  }
                })
                .catch(error => {
                  console.error('Error deleting post:', error);
                  alert('An error occurred while deleting the post.');
                });
            }
          });
        });
      </script>
      
</body>
</html>