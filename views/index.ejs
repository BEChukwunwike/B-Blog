<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scribbles</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
        <h2 class="mt-3">Latest Posts</h2>
        <ul id="posts-list" class="mt-3">
    

            <script>
            const storedPost = JSON.parse(localStorage.getItem('myblog_post'));
            if (storedPost) {
                const postsList = document.getElementById('posts-list');
                const listItem = document.createElement('li');
                listItem.innerHTML = `
                <h3><a href="post/${storedPost.id}">${storedPost.title}</a></h3>
                <p>${storedPost.content}</p>
                `;
                postsList.appendChild(listItem);
            } else {
                const postsList = document.getElementById('posts-list');
                postsList.innerHTML = '<p>No posts available yet.</p>';
            }
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        </ul>
    </div>
    
    <%- include("partials/footer.ejs") %>
</body>
</html>